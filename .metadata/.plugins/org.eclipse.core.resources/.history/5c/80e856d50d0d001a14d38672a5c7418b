package bean;

public class Alumno {

	// Creamos las variables
	String nombreCompleto = "";
	String dni = "";
	String sexo = "";
	int edad = 0;

	// Generamos los constructores
	public Alumno() {
		super();
	}

	public Alumno(String nombreCompleto, String dni, String sexo, int edad) {
		super();
		this.nombreCompleto = nombreCompleto;
		this.dni = dni;
		this.sexo = sexo;
		this.edad = edad;
	}

	// Generamos los getters and setters
	public String getNombreCompleto() {
		return nombreCompleto;
	}

	public void setNombreCompleto(String nombreCompleto) {
		this.nombreCompleto = nombreCompleto;
	}

	public String getDni() {
		return dni;
	}

	public void setDni(String dni) {
		this.dni = dni;
	}

	public String getSexo() {
		return sexo;
	}

	public void setSexo(String sexo) {
		this.sexo = sexo;
	}

	public int getEdad() {
		return edad;
	}

	public void setEdad(int edad) {
		this.edad = edad;
	}

//Generamos el metodo ToString 
	@Override
	public String toString() {
		return "Alumno [nombreCompleto=" + nombreCompleto + ", dni=" + dni + ", sexo=" + sexo + ", edad=" + edad + "]";
	}

}
